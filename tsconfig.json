{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "strictNullChecks": true,
      "module": "esnext",
      "jsx": "react",
      "target": "es6",
      "allowJs": true,
      "moduleResolution": "bundler", /* bundler required for react-social-icons/component. Not needed without /component. */
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true
    },
    "include": [
      "./src/"
    ]
  }